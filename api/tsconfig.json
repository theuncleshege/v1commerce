{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@Controllers/*": [
        "src/controllers/*"
      ],
      "@DBConnections/*": [
        "src/databases/*"
      ],
      "@Entities/*": [
        "src/entity/*"
      ],
      "@Middlewares/*": [
        "src/middlewares/*"
      ],
      "@Functions/*": [
        "src/functions/*"
      ],
      "@Repositories/*": [
        "src/repositories/*"
      ],
      "@Services/*": [
        "src/services/*"
      ],
      "@Shared/*": [
        "src/shared/*"
      ],
      "@Tests/*": [
        "src/__tests__/*"
      ]
    }
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules/**/*",
    ".idea/**/*",
    ".vscode/**/*"
  ]
}
