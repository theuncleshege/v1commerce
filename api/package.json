{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "debug": "ts-node --inspect=5858 -r tsconfig-paths/register ./src/index.ts",
    "precoverage": "rm -rf coverage && jest --clearCache",
    "coverage": "yarn test --coverage",
    "coverage:unit": "yarn test:unit --coverage",
    "coverage:integration": "yarn test:integration --coverage",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "run:migrations": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:watch": "nodemon --watch 'src/**/*.ts' --watch '.env' --ignore 'src/**/*.spec.ts' --ignore 'src/**/*.test.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:unit": "jest src",
    "test:integration": "jest tests"
  },
  "dependencies": {
    "apollo-server": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^1.0.4",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "slug": "^4.0.1",
    "typeorm": "^0.2.28",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.15",
    "@types/jest-cli": "^24.3.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.3",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/rimraf": "^3.0.0",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-cli": "^26.6.1",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.6",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
